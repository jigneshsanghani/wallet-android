<?xml version="1.0" encoding="utf-8"?><!-- hundreds -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_balance_vw_digit_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:orientation="vertical">

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/home_balance_txt_digit_top"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:alpha="0"
        android:text="@string/digit_5"
        android:textColor="@color/white"
        android:textSize="@dimen/home_balance_digit_text_size"
        app:customFont="AVENIR_LT_STD_BLACK" />

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/home_balance_txt_digit_bottom"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:textColor="@color/white"
        android:textSize="@dimen/home_balance_digit_text_size"
        app:customFont="AVENIR_LT_STD_BLACK" />
</FrameLayout>